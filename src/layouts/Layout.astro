---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot/>
	</body>
</html>
<style is:global>

	html {
		font-family: system-ui, sans-serif;
		background-image: linear-gradient(to right top, #0c424c, #1a3743, #202c36, #202228, #1a1a1a);
	}

	body{
		min-height: 100vh;
		width: 100%;
	}

</style>